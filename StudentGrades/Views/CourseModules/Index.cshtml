@model IEnumerable<StudentGrades.CourseModule>


<h1>Курс @ViewData["Name"]</h1>
@if ((string)ViewData["Role"] == "teacher" ||
     (string)ViewData["Role"] == "admin")
{
<p>
    <a asp-action="Create">Створити новий контроль</a>
</p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DueDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Info)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModuleTypeid)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">
                    @Html.DisplayFor(modelItem => item.Name)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DueDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Info)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModuleType.Name)
            </td>
            @if ((string)ViewData["Role"] == "teacher" ||
              (string)ViewData["Role"] == "admin")
            {
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Редагувати</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                </td>
            }
        </tr>
}
    </tbody>
</table>
