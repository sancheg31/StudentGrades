@model IEnumerable<StudentGrades.Student>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brirthday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentGroup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Term)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserInfo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brirthday)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentGroup.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentNavigation.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Term.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserInfo.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
