@model StudentGrades.Student

@{
    ViewData["Title"] = "Index";
}

<h1>Особиста інформація</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserInfo.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => modelItem.UserInfo.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StudentGroup.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => modelItem.StudentGroup.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Term)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => modelItem.Term.Number)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StudentNavigation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => modelItem.StudentNavigation.Code)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserInfo.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => modelItem.UserInfo.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserInfo.Telephone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => modelItem.UserInfo.Telephone)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Редагувати</a> |
