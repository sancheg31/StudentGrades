@model IEnumerable<StudentGrades.Discipline>

@{
    ViewData["Title"] = "Index";
}

<h1>Дисципліни</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Caphedra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Info)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">
                    @Html.DisplayFor(modelItem => item.Name)
                </a>
            </td>
            <td>
                <a asp-action="Details" asp-controller="Caphedras" asp-route-id="@item.CaphedraId">
                    @Html.DisplayFor(modelItem => item.Caphedra.Name)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Info)
            </td>
        </tr>
}
    </tbody>
</table>
